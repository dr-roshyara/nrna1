#write server name 
 server {
   listen 80;
   listen [::]:80;
    server_name nrnagermany.org www.nrnagermany.org;
    root /var/www/nrna/public;
    #
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Content-Type-Options "nosniff";
    
    access_log /var/log/nginx/nrnagermany.orgaccess.log;
    error_log /var/log/nginx/nrnagermany.org.error.log;
    #
    index index.html index.htm index.php;
    #		
    charset utf-8;
		
     location / {
               # try_files $uri $uri/ =404;
             try_files $uri $uri/ /index.php?$query_string;
     }
		
    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }
    #	
    error_page 404 /index.php;
    #
    location ~ /\.ht {
      deny all;
      }
    #
    location ~ /\.(?!well-known).* {
        deny all;
    }
    #for php8.0 
     location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php8.0-fpm.sock;
    }	
    #certbot 
    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/nrnagermany.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/nrnagermany.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
   
}
server {
   if ($host = www.nrnagermany.org) {
       return 301 https://$host$request_uri;
    } # managed by Certbot
		
		
    if ($host = nrnagermany.org) {
        return 301 https://$host$request_uri;
   } # managed by Certbot

}
	

		

